<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @note.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @note.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="note[title]" class="fieldLabel">Title</label>
            <input type="text" id="note[title]" name="note[title]" <%= placeholder("Title") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="note[description]" class="fieldLabel">Description</label>
            <input type="text" id="note[description]" name="note[description]" <%= placeholder("Description") %> />
          </div>

          <div data-role="fieldcontain">
            <label for="note[image_uri]" class="fieldLabel">Image</label>
            <input type="text" id="note[image_uri]" name="note[image_uri]" <%= placeholder("Image") %> />
          </div>          

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
